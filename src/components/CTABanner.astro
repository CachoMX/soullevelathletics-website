<section class="relative py-24 md:py-32 overflow-hidden" aria-label="Call to action">
  <!-- Background -->
  <div class="absolute inset-0">
    <img
      src="/images/hero/hero-bg.jpg"
      alt=""
      class="w-full h-full object-cover"
      loading="lazy"
      aria-hidden="true"
    />
    <div class="absolute inset-0 bg-brand-black/85"></div>
  </div>

  <!-- Gold accent lines -->
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-brand-gold/50 to-transparent"></div>
  <div class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-brand-gold/50 to-transparent"></div>

  <!-- Content -->
  <div class="relative z-10 container-custom mx-auto px-4 md:px-8 text-center">
    <div class="reveal">
      <p class="font-subheading text-sm uppercase tracking-[0.3em] text-brand-gold mb-6">
        Your Next Level Starts Here
      </p>
      <h2 class="text-h1 text-white mb-6 max-w-3xl mx-auto">
        Ready to <span class="gold-gradient-text">Elevate</span> Your Game?
      </h2>
      <p class="text-white/60 text-lg max-w-xl mx-auto mb-10">
        Train smarter. Move faster. Play stronger. Join athletes who are committed to reaching their full potential.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="btn-primary text-lg px-10 py-5">
          Book Your Session
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <a href="tel:+18187433100" class="btn-secondary text-lg px-10 py-5">
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Call Now
        </a>
      </div>
    </div>
  </div>
</section>
