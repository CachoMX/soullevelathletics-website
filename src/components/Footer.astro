---
import { siteConfig } from '../data/siteConfig';
---

<footer class="bg-brand-black border-t border-white/10">
  <div class="container-custom mx-auto section-padding">
    <!-- Main Footer -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-12">
      <!-- Brand -->
      <div class="lg:col-span-1">
        <a href="/" class="flex items-center gap-3 mb-4">
          <img
            src="/images/logo.png"
            alt={`${siteConfig.name} logo`}
            class="h-16 w-16 rounded-full object-contain bg-white p-1"
            width="64"
            height="64"
          />
        </a>
        <p class="font-heading text-lg uppercase tracking-wider text-white mb-1">
          Soul Level Athletics
        </p>
        <p class="text-brand-gray text-sm mb-4">
          Train Smarter. Move Faster. Play Stronger.
        </p>
        <!-- Social Links -->
        <div class="flex gap-4">
          <a
            href={siteConfig.social.instagram1}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={`Follow us on Instagram ${siteConfig.social.instagram1Handle}`}
            class="w-10 h-10 rounded-full bg-brand-surface flex items-center justify-center text-brand-gray hover:text-brand-gold hover:bg-brand-surface-light transition-all duration-300"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/>
            </svg>
          </a>
          <a
            href={siteConfig.social.instagram2}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={`Follow us on Instagram ${siteConfig.social.instagram2Handle}`}
            class="w-10 h-10 rounded-full bg-brand-surface flex items-center justify-center text-brand-gray hover:text-brand-gold hover:bg-brand-surface-light transition-all duration-300"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="font-heading text-sm uppercase tracking-widest text-brand-gold mb-6">
          Quick Links
        </h3>
        <ul class="space-y-3">
          {[
            { label: 'Home', href: '/' },
            { label: 'About Coach Chris', href: '/about' },
            { label: 'Training Programs', href: '/services' },
            { label: 'Testimonials', href: '/testimonials' },
            { label: 'Contact', href: '/contact' },
          ].map((link) => (
            <li>
              <a href={link.href} class="text-brand-gray hover:text-white transition-colors duration-300 text-sm">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h3 class="font-heading text-sm uppercase tracking-widest text-brand-gold mb-6">
          Programs
        </h3>
        <ul class="space-y-3">
          {[
            { label: 'Strength & Conditioning', href: '/services/strength-conditioning' },
            { label: 'Athletic Performance', href: '/services/athletic-performance' },
            { label: 'Injury Prevention', href: '/services/injury-prevention' },
            { label: 'Film Study & IQ', href: '/services/film-study' },
            { label: 'Private Skill Training', href: '/services/private-training' },
            { label: 'Live Action Training', href: '/services/live-action' },
          ].map((link) => (
            <li>
              <a href={link.href} class="text-brand-gray hover:text-white transition-colors duration-300 text-sm">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="font-heading text-sm uppercase tracking-widest text-brand-gold mb-6">
          Contact
        </h3>
        <ul class="space-y-4">
          <li>
            <a href={`tel:${siteConfig.coach.phoneRaw}`} class="flex items-start gap-3 text-brand-gray hover:text-white transition-colors duration-300 text-sm">
              <svg class="w-5 h-5 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              {siteConfig.coach.phone}
            </a>
          </li>
          <li>
            <a href={`mailto:${siteConfig.coach.email}`} class="flex items-start gap-3 text-brand-gray hover:text-white transition-colors duration-300 text-sm">
              <svg class="w-5 h-5 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              {siteConfig.coach.email}
            </a>
          </li>
          <li class="flex items-start gap-3 text-brand-gray text-sm">
            <svg class="w-5 h-5 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            Serving {siteConfig.location.serviceArea}
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-white/10 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-brand-gray text-xs">
        &copy; {new Date().getFullYear()} {siteConfig.name}. All rights reserved.
      </p>
      <p class="text-brand-gray/50 text-xs">
        Elevate Your Game.
      </p>
    </div>
  </div>
</footer>
