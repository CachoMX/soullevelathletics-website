---
import { siteConfig } from '../data/siteConfig';
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden" aria-label="Hero">
  <!-- Background Image -->
  <div class="absolute inset-0">
    <img
      src="/images/hero/hero-silhouette.jpg"
      alt="Basketball player jumping silhouette at sunrise"
      class="w-full h-full object-cover"
      loading="eager"
      fetchpriority="high"
    />
    <!-- Gradient Overlay -->
    <div class="absolute inset-0 bg-gradient-to-b from-brand-black/80 via-brand-black/60 to-brand-black"></div>
    <div class="absolute inset-0 bg-gradient-to-r from-brand-black/70 via-transparent to-brand-black/50"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 container-custom mx-auto px-4 md:px-8 text-center pt-20">
    <!-- Badge -->
    <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full border border-brand-gold/30 bg-brand-gold/10 mb-8 animate-fade-in">
      <span class="w-2 h-2 rounded-full bg-brand-gold animate-pulse"></span>
      <span class="font-subheading text-xs uppercase tracking-widest text-brand-gold">
        Now Accepting New Athletes
      </span>
    </div>

    <!-- Main Heading -->
    <h1 class="text-display max-w-5xl mx-auto mb-6 animate-fade-in" style="animation-delay: 0.2s;">
      Elite Basketball Training<br />
      <span class="gold-gradient-text">&amp; Athletic Performance</span><br />
      Coaching
    </h1>

    <!-- Subheading -->
    <p class="font-body text-lg md:text-xl text-white/70 max-w-2xl mx-auto mb-4 animate-fade-in" style="animation-delay: 0.4s;">
      For kids, youth, high school, college athletes, and anyone ready to level up.
    </p>

    <!-- Motto -->
    <p class="font-subheading text-sm uppercase tracking-[0.2em] text-brand-gold/80 mb-10 animate-fade-in" style="animation-delay: 0.5s;">
      Real Training. Real Experience. Real Results.
    </p>

    <!-- CTAs -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center animate-fade-in" style="animation-delay: 0.6s;">
      <a href="/contact" class="btn-primary text-lg px-10 py-5">
        Book Your Session
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
      <a href="/services" class="btn-secondary text-lg px-10 py-5">
        View Programs
      </a>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-brand-gold/50" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </div>
  </div>
</section>
