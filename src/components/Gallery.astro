---
import { siteConfig } from '../data/siteConfig';

const images = [
  { src: '/images/training/training1.jpg', alt: 'Basketball training session' },
  { src: '/images/training/training2.jpg', alt: 'Athlete portrait during training' },
  { src: '/images/training/training3.jpg', alt: 'One-on-one basketball training' },
  { src: '/images/training/training4.jpg', alt: 'Strength and conditioning workout' },
  { src: '/images/training/training5.jpg', alt: 'Group training session' },
  { src: '/images/coach/johnson1.jpg', alt: 'Coach Chris Johnson' },
];
---

<section class="section-padding bg-brand-black" aria-label="Training Gallery">
  <div class="container-custom mx-auto">
    <!-- Header -->
    <div class="text-center mb-16 reveal">
      <p class="font-subheading text-sm uppercase tracking-[0.2em] text-brand-gold mb-4">
        In Action
      </p>
      <h2 class="text-h2 text-white mb-4">
        Training Gallery
      </h2>
      <p class="text-white/60 max-w-2xl mx-auto text-lg">
        Real training. Real work. See what it looks like to train at the soul level.
      </p>
    </div>

    <!-- Image Grid -->
    <div class="grid grid-cols-2 md:grid-cols-3 gap-3 md:gap-4 reveal">
      {images.map((image, i) => (
        <div
          class={`relative overflow-hidden rounded-xl group ${
            i === 0 ? 'md:col-span-2 md:row-span-2' : ''
          }`}
        >
          <img
            src={image.src}
            alt={image.alt}
            class={`w-full object-cover transition-transform duration-700 group-hover:scale-110 ${
              i === 0 ? 'aspect-square md:aspect-auto md:h-full' : 'aspect-square'
            }`}
            loading="lazy"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-brand-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        </div>
      ))}
    </div>

    <!-- Instagram CTA -->
    <div class="text-center mt-12 reveal">
      <p class="text-white/50 text-sm mb-4">Follow us for more training content</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href={siteConfig.social.instagram1}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 text-brand-gold hover:text-brand-gold-light transition-colors font-subheading text-sm uppercase tracking-wider"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/>
          </svg>
          {siteConfig.social.instagram1Handle}
        </a>
        <a
          href={siteConfig.social.instagram2}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 text-brand-gold hover:text-brand-gold-light transition-colors font-subheading text-sm uppercase tracking-wider"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/>
          </svg>
          {siteConfig.social.instagram2Handle}
        </a>
      </div>
    </div>
  </div>
</section>
