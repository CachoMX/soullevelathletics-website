---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import { siteConfig } from '../data/siteConfig';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
}

const {
  title = siteConfig.name,
  description = siteConfig.description,
  ogImage = '/images/og-image.jpg',
} = Astro.props;

const pageTitle = title === siteConfig.name ? title : `${title} | ${siteConfig.name}`;
const canonicalUrl = new URL(Astro.url.pathname, siteConfig.url);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="author" content={siteConfig.coach.name} />
    <link rel="canonical" href={canonicalUrl.toString()} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, siteConfig.url).toString()} />
    <meta property="og:url" content={canonicalUrl.toString()} />
    <meta property="og:site_name" content={siteConfig.name} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(ogImage, siteConfig.url).toString()} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Montserrat:wght@500;600;700&family=Oswald:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/images/logo.png" />

    <title>{pageTitle}</title>

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'SportsActivityLocation',
      name: siteConfig.name,
      description: siteConfig.description,
      url: siteConfig.url,
      telephone: siteConfig.coach.phone,
      email: siteConfig.coach.email,
      address: {
        '@type': 'PostalAddress',
        addressLocality: siteConfig.location.area,
        addressRegion: siteConfig.location.state,
        addressCountry: 'US',
      },
      founder: {
        '@type': 'Person',
        name: siteConfig.coach.name,
        jobTitle: siteConfig.coach.title,
      },
      sameAs: [
        siteConfig.social.instagram1,
        siteConfig.social.instagram2,
      ],
    })} />
  </head>
  <body class="min-h-screen flex flex-col">
    <a href="#main-content" class="sr-only focus:not-sr-only focus:fixed focus:top-4 focus:left-4 focus:z-[100] focus:bg-brand-gold focus:text-brand-black focus:px-4 focus:py-2 focus:rounded-lg focus:font-bold">
      Skip to main content
    </a>
    <Header />
    <main id="main-content" class="flex-1">
      <slot />
    </main>
    <Footer />

    <script>
      // Scroll reveal animation
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add('visible');
            }
          });
        },
        { threshold: 0.1, rootMargin: '0px 0px -50px 0px' }
      );

      document.querySelectorAll('.reveal').forEach((el) => observer.observe(el));
    </script>
  </body>
</html>
