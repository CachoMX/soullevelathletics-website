---
import BaseLayout from '../layouts/BaseLayout.astro';
import { siteConfig } from '../data/siteConfig';
---

<BaseLayout
  title="Merch"
  description="Soul Level Athletics branded merchandise. Rep the brand and train in style."
>
  <!-- Page Header -->
  <section class="pt-32 pb-16 md:pt-40 md:pb-20 bg-brand-black">
    <div class="container-custom mx-auto px-4 md:px-8">
      <p class="font-subheading text-sm uppercase tracking-[0.2em] text-brand-gold mb-4 reveal">
        Merch
      </p>
      <h1 class="text-h1 text-white mb-6 reveal" style="transition-delay: 0.1s;">
        Soul Level <span class="gold-gradient-text">Merch</span>
      </h1>
    </div>
  </section>

  <!-- Coming Soon -->
  <section class="section-padding bg-brand-black">
    <div class="container-custom mx-auto">
      <div class="max-w-2xl mx-auto text-center reveal">
        <div class="w-24 h-24 rounded-full bg-brand-gold/10 flex items-center justify-center mx-auto mb-8">
          <span class="text-5xl">ðŸ”¥</span>
        </div>
        <h2 class="text-h2 text-white mb-6">
          Coming Soon
        </h2>
        <p class="text-white/60 text-lg mb-8">
          Official Soul Level Athletics merchandise is on the way. Rep the brand and train in style. Follow us on Instagram to be the first to know when the store drops.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href={siteConfig.social.instagram2}
            target="_blank"
            rel="noopener noreferrer"
            class="btn-primary"
          >
