---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/ContactForm.tsx';
import { siteConfig } from '../data/siteConfig';
---

<BaseLayout
  title="Contact & Book a Session"
  description="Book a training session with Coach Chris Johnson. Contact Soul Level Athletics by phone, email, or our online form. Serving Porter Ranch and surrounding cities."
>
  <!-- Page Header -->
  <section class="pt-32 pb-16 md:pt-40 md:pb-20 bg-brand-black">
    <div class="container-custom mx-auto px-4 md:px-8">
      <p class="font-subheading text-sm uppercase tracking-[0.2em] text-brand-gold mb-4 reveal">
        Get Started
      </p>
      <h1 class="text-h1 text-white mb-6 reveal" style="transition-delay: 0.1s;">
        Book Your <span class="gold-gradient-text">Session</span>
      </h1>
      <p class="text-white/60 text-lg max-w-3xl reveal" style="transition-delay: 0.2s;">
        Ready to elevate your game? Fill out the form below or reach out directly. Coach Chris will get back to you within 24 hours.
      </p>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="section-padding bg-brand-black">
    <div class="container-custom mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-5 gap-12 lg:gap-16">
        <!-- Form (takes 3 columns) -->
        <div class="lg:col-span-3 reveal">
          <div class="card p-8 md:p-10">
            <h2 class="font-heading text-xl uppercase tracking-wider text-white mb-8">
              Send a Message
            </h2>
            <ContactForm client:load />
          </div>
        </div>

        <!-- Contact Info (takes 2 columns) -->
        <div class="lg:col-span-2 space-y-8">
          <!-- Direct Contact -->
          <div class="card p-8 reveal">
            <h2 class="font-heading text-xl uppercase tracking-wider text-white mb-6">
              Contact Directly
            </h2>
            <div class="space-y-5">
              <a
                href={`tel:${siteConfig.coach.phoneRaw}`}
                class="flex items-center gap-4 group"
              >
                <div class="w-12 h-12 rounded-xl bg-brand-gold/10 flex items-center justify-center group-hover:bg-brand-gold/20 transition-colors">
                  <svg class="w-5 h-5 text-brand-gold" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <p class="text-white/50 text-xs font-subheading uppercase tracking-wider">Phone</p>
                  <p class="text-white group-hover:text-brand-gold transition-colors font-subheading">
                    {siteConfig.coach.phone}
                  </p>
                </div>
              </a>

              <a
                href={`mailto:${siteConfig.coach.email}`}
                class="flex items-center gap-4 group"
              >
                <div class="w-12 h-12 rounded-xl bg-brand-gold/10 flex items-center justify-center group-hover:bg-brand-gold/20 transition-colors">
                  <svg class="w-5 h-5 text-brand-gold" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <p class="text-white/50 text-xs font-subheading uppercase tracking-wider">Email</p>
                  <p class="text-white group-hover:text-brand-gold transition-colors font-subheading text-sm">
                    {siteConfig.coach.email}
                  </p>
                </div>
              </a>

              <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-xl bg-brand-gold/10 flex items-center justify-center">
                  <svg class="w-5 h-5 text-brand-gold" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <p class="text-white/50 text-xs font-subheading uppercase tracking-wider">Service Area</p>
                  <p class="text-white font-subheading">
                    {siteConfig.location.serviceArea}
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Social Media -->
          <div class="card p-8 reveal" style="transition-delay: 0.1s;">
            <h2 class="font-heading text-xl uppercase tracking-wider text-white mb-6">
              Follow Us
            </h2>
            <div class="space-y-4">
              <a
                href={siteConfig.social.instagram1}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-4 group"
              >
                <div class="w-12 h-12 rounded-xl bg-brand-gold/10 flex items-center justify-center group-hover:bg-brand-gold/20 transition-colors">
                  <svg class="w-5 h-5 text-brand-gold" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/>
                  </svg>
                </div>
                <div>
                  <p class="text-white/50 text-xs font-subheading uppercase tracking-wider">Instagram</p>
                  <p class="text-white group-hover:text-brand-gold transition-colors font-subheading">
                    {siteConfig.social.instagram1Handle}
                  </p>
                </div>
              </a>
              <a
                href={siteConfig.social.instagram2}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-4 group"
              >
                <div class="w-12 h-12 rounded-xl bg-brand-gold/10 flex items-center justify-center group-hover:bg-brand-gold/20 transition-colors">
                  <svg class="w-5 h-5 text-brand-gold" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/>
                  </svg>
                </div>
                <div>
                  <p class="text-white/50 text-xs font-subheading uppercase tracking-wider">Instagram</p>
                  <p class="text-white group-hover:text-brand-gold transition-colors font-subheading">
                    {siteConfig.social.instagram2Handle}
                  </p>
                </div>
              </a>
            </div>
          </div>

          <!-- Quick FAQ -->
          <div class="card p-8 reveal" style="transition-delay: 0.2s;">
            <h2 class="font-heading text-xl uppercase tracking-wider text-white mb-6">
              Quick FAQs
            </h2>
            <div class="space-y-4">
              {[
                { q: 'How long is a session?', a: 'Sessions typically run 60 minutes, tailored to your program and goals.' },
                { q: 'Do you train beginners?', a: 'Absolutely. We work with all skill levels from beginners to elite athletes.' },
                { q: 'Where do sessions take place?', a: 'We train in the Porter Ranch area and surrounding cities in Los Angeles.' },
              ].map((faq) => (
                <div class="border-b border-white/5 pb-4 last:border-0 last:pb-0">
                  <p class="text-white font-subheading text-sm font-semibold mb-1">{faq.q}</p>
                  <p class="text-white/50 text-sm">{faq.a}</p>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
