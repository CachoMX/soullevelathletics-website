---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { services } from '../../data/services';
import CTABanner from '../../components/CTABanner.astro';
---

<BaseLayout
  title="Training Programs"
  description="Explore our 6 elite training programs: Strength & Conditioning, Athletic Performance, Injury Prevention, Film Study, Private Skill Training, and Live Action Training."
>
  <!-- Page Header -->
  <section class="pt-32 pb-16 md:pt-40 md:pb-20 bg-brand-black">
    <div class="container-custom mx-auto px-4 md:px-8">
      <p class="font-subheading text-sm uppercase tracking-[0.2em] text-brand-gold mb-4 reveal">
        Our Programs
      </p>
      <h1 class="text-h1 text-white mb-6 reveal" style="transition-delay: 0.1s;">
        Training Programs Built on<br />
        <span class="gold-gradient-text">Real Experience</span>
      </h1>
      <p class="text-white/60 text-lg max-w-3xl reveal" style="transition-delay: 0.2s;">
        Every program is designed from real professional playing experience. No gimmicks, no filler â€” just training methods proven at the highest level of competition.
      </p>
    </div>
  </section>

  <!-- Services List -->
  <section class="section-padding bg-brand-black">
    <div class="container-custom mx-auto">
      <div class="space-y-8">
        {services.map((service, i) => (
          <a
            href={`/services/${service.slug}`}
            class="block group reveal"
            style={`transition-delay: ${i * 0.05}s;`}
          >
            <div class="card p-8 md:p-10 flex flex-col md:flex-row gap-6 md:gap-10 items-start">
              <!-- Icon & Number -->
              <div class="flex items-center gap-4 md:flex-col md:items-center md:min-w-[80px]">
                <span class="text-4xl" aria-hidden="true">{service.icon}</span>
                <span class="font-heading text-4xl text-white/10 md:mt-2">
                  {String(i + 1).padStart(2, '0')}
                </span>
              </div>

              <!-- Content -->
              <div class="flex-1">
                <h2 class="font-heading text-2xl uppercase tracking-wider text-white mb-3 group-hover:text-brand-gold transition-colors duration-300">
                  {service.title}
                </h2>
                <p class="text-white/60 text-lg leading-relaxed mb-4">
                  {service.description}
                </p>
                <div class="flex flex-wrap gap-2 mb-4">
                  {service.details.slice(0, 4).map((detail) => (
                    <span class="px-3 py-1 rounded-full bg-brand-surface-light text-white/50 text-xs font-subheading">
                      {detail}
                    </span>
                  ))}
                </div>
                <span class="inline-flex items-center gap-2 text-brand-gold text-sm font-subheading uppercase tracking-wider group-hover:gap-3 transition-all duration-300">
                  View Program Details
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </span>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <CTABanner />
</BaseLayout>
